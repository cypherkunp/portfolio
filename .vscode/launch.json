  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Portfolio App",
      "type": "node-terminal",
      "request": "launch",
      "command": "nvm use && pnpm dev",
      "cwd": "${workspaceFolder}/apps/portfolio",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}/apps/portfolio"
      }
    }
  ]
}
